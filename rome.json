{
  "$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      }
    },
    "ignore": ["node_modules", ".next", "dist"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentSize": 2,
    "enabled": true,
    "ignore": ["node_modules", ".next", "dist"]
  }
}
